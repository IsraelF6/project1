<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context="edu.fsu.cs.mobile.myapplication.MapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Lap_button" />

    <Button
        android:id="@+id/Start_Pause_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="onClick_Start"
        android:text="Start" />

    <Button
        android:id="@+id/Reset_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="onClick_Reset"
        android:text="Reset" />

    <Button
        android:id="@+id/Lap_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Start_Pause_button"
        android:layout_centerHorizontal="true"
        android:onClick="onClick_Lap"
        android:text="Save Lap" />

</RelativeLayout>
